{
    "name": "your-name/hotel-booking-system",
    "description": "Hotel Booking System with Clean Architecture and DDD",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
}
}